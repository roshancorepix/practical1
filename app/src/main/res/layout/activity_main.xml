<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_thambi"
        android:text="@string/login"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_login_txt"
        android:text="@string/hear"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/tv_login_txt"
        android:layout_marginStart="10dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="20dp"
        android:layout_below="@id/tv_login_txt">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:drawableLeft="@drawable/ic_username"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="8dp"
            android:fontFamily="@font/baloo_thambi"
            android:maxLines="1"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:background="@null"
             />

        <View
            android:id="@+id/v_username"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/et_username"
            android:layout_marginTop="6dp"
            android:background="@color/colorAccent"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_below="@+id/v_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:fontFamily="@font/baloo_thambi"
            android:drawableLeft="@drawable/ic_password"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="8dp"
            android:password="true"
            android:layout_marginTop="50dp"
            android:maxLines="1"
            android:textColorHint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:background="@null"/>

        <View
            android:id="@+id/v_pass"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/et_password"
            android:layout_marginTop="6dp"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btn_signin"
            android:layout_below="@+id/v_pass"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_drawable"
            android:fontFamily="@font/baloo_thambi"
            android:text="@string/signin"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"/>
    </RelativeLayout>
</RelativeLayout>
